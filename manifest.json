{
  "manifest_version": 3,
  "name": "Sustainability Shopping Companion",
  "version": "1.0",
  "description": "Shows sustainability scores and alternatives as you shop.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.amazon.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [ "https://www.amazon.com/*" ],
      "js": [ "content.js" ]
    }
  ]
}
